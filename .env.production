# Server Configuration
NODE_ENV=production
PORT=3000

# Database
MONGODB_URI=mongodb://your-production-mongodb-host:27017/studentAbsence
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/studentAbsence?retryWrites=true&w=majority

# JWT Configuration
# IMPORTANT: Generate a new secure secret for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
JWT_EXPIRE=7d

# CORS Configuration
# Add your production frontend URLs
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# Logging
LOG_LEVEL=info

# Rate Limiting (Re-enable for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
