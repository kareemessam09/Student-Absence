# Docker Environment Variables
# Copy this file to .env.docker and fill in the values

# MongoDB Passwords
MONGODB_ADMIN_PASSWORD=SecureAdminPassword123!
MONGODB_APP_PASSWORD=SecureAppPassword456!

# JWT Configuration
JWT_SECRET=generate-a-secure-random-string-here-use-crypto-randomBytes
JWT_EXPIRE=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001,https://yourdomain.com

# Logging
LOG_LEVEL=info

# Generate JWT_SECRET with:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
