{
  "name": "express-mongoose-starter",
  "version": "1.0.0",
  "description": "A well-structured Express.js starter with Mongoose, security middlewares, and error handling",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "start:prod": "NODE_ENV=production node src/app.js",
    "dev": "nodemon src/app.js",
    "seed": "node src/seed.js",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop student-absence-api",
    "pm2:restart": "pm2 restart student-absence-api",
    "pm2:reload": "pm2 reload student-absence-api",
    "pm2:delete": "pm2 delete student-absence-api",
    "pm2:logs": "pm2 logs student-absence-api",
    "pm2:monit": "pm2 monit",
    "backup": "./scripts/backup-mongodb.sh",
    "health": "./scripts/health-check.sh",
    "deploy": "./deploy.sh"
  },
  "keywords": [
    "express",
    "mongoose",
    "nodejs",
    "api",
    "starter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.11.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "socket.io": "^4.7.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
